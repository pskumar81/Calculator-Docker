{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Calculator.Client": "Information",
      "Microsoft.Extensions.Hosting": "Warning"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "CalculatorService": {
    "ServerUrl": "http://${AZURE_SERVER_PRIVATE_IP}:5002",
    "TimeoutSeconds": 30,
    "RetryCount": 3,
    "RetryDelayMs": 1000
  },
  "Azure": {
    "VM": {
      "Name": "${AZURE_CLIENT_VM_NAME}",
      "ResourceGroup": "${AZURE_RESOURCE_GROUP}",
      "Region": "${AZURE_REGION}",
      "PrivateIP": "${AZURE_CLIENT_PRIVATE_IP}",
      "PublicDNS": "${AZURE_CLIENT_PUBLIC_DNS}"
    },
    "Server": {
      "PrivateIP": "${AZURE_SERVER_PRIVATE_IP}",
      "PublicDNS": "${AZURE_SERVER_PUBLIC_DNS}",
      "Port": 5002
    },
    "ApplicationInsights": {
      "InstrumentationKey": "${APPINSIGHTS_INSTRUMENTATIONKEY}",
      "EnableDependencyTrackingTelemetryModule": true,
      "EnableRequestTrackingTelemetryModule": true
    }
  }
}